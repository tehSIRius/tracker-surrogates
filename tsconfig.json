{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2022"
    ],
    "target": "es2016",
    "module": "CommonJS",
    "baseUrl": "./",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "scripts",
    "surrogates"
  ]
}