{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2022"
    ],
    "target": "ES2022",
    "module": "ES2022",
    "baseUrl": "./",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "./types"
    ]
  },
  "include": [
    "scripts",
    "surrogates",
    "types",
    "vite.config.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}