{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2022"
    ],
    "target": "es2016",
    "module": "CommonJS",
    "baseUrl": "./",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "./types"
    ]
  },
  "include": [
    "scripts",
    "surrogates",
    "types/window.d.ts"
  ]
}